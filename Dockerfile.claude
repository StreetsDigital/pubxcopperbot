# Dockerfile for Claude Code CLI Proxy
FROM node:20-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    curl \
    python3 \
    python3-pip \
    && rm -rf /var/lib/apt/lists/*

# Install Claude Code CLI globally
RUN npm install -g @anthropic-ai/claude-code

# Install Python dependencies for the proxy
COPY requirements-proxy.txt .
RUN pip3 install --no-cache-dir --break-system-packages -r requirements-proxy.txt

# Copy proxy service
COPY claude_code_wrapper.py .

# Create config directory for Claude Code
RUN mkdir -p /root/.config/claude-code

# Expose port
EXPOSE 6969

# Start proxy service
CMD ["python3", "claude_code_wrapper.py"]
